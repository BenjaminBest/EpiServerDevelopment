@using EPiServer.Web.Routing
@model EpiServerDevelopment.Features.Teasers.DefaultTemplateViewModel

@{
    var imageUrl = Model.Image == null ? string.Empty : UrlResolver.Current.GetUrl(Model.Image.ContentLink);
}

<section id="call-to-action" style="background: url(@imageUrl) no-repeat;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block">
                    <h2>@Model.Title</h2>
                    <p>@Model.SubTitle</p>
                    <a class="btn btn-default btn-call-to-action" href="@UrlResolver.Current.GetUrl(@Model.Link)">@Model.ButtonCaption</a>
                </div>
            </div>
        </div>
    </div>
</section>
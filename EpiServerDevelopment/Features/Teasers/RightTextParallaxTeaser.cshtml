@using EpiServerDevelopment.Features.Teasers
@using EPiServer.Web.Routing

@model DefaultTemplateViewModel

@{
    var imageUrl = Model.Image == null ? string.Empty : UrlResolver.Current.GetUrl(Model.Image.ContentLink);
}

<section id="feature" style="background: url(@imageUrl);
         background-position: 50% 94px;
         width: 100%;
         display: block;
         position: relative;
         overflow: visible;
         background-attachment: fixed;
         background-repeat: no-repeat;
         background-position: center center;
         background-color: #fff;
         -webkit-background-size: cover;
         -moz-background-size: cover;
         -o-background-size: cover;
         background-size: cover;
         -webkit-box-sizing: border-box;
         -moz-box-sizing: border-box;
         box-sizing: border-box;
         -webkit-backface-visibility: hidden;
         backface-visibility: hidden;
         padding: 100px 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-6">
                <h2>@Model.Title</h2>
                <p>@Model.Description</p>
                <a href="@UrlResolver.Current.GetUrl(@Model.Link)" class="btn btn-view-works">@Model.ButtonCaption</a>
            </div>
        </div>
    </div>
</section>